<% provide(:title, "Scans") %>
<p id="notice"><%= notice %></p>
<h1>Scans</h1>

<div class="center jumbotron">

  <table>
    <thead>
      <tr>
        <th>Subject</th>
        <th>Session</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @scans.each do |scan| %>
        <tr>
          <td><%= scan.subject %></td>
          <td><%= scan.session %></td>
          <td><%= link_to 'Show', scan %></td>
          <td><%= link_to 'Edit', edit_scan_path(scan) %></td>
          <td><%= link_to 'Destroy', scan, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Scan', new_scan_path, class: "btn btn-primary" %>

</div>
